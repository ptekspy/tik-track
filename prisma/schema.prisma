// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/client"
  moduleFormat = "esm" 
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

enum VideoStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum SnapshotType {
  ONE_HOUR
  TWO_HOUR
  THREE_HOUR
  SIX_HOUR
  TWELVE_HOUR
  ONE_DAY
  TWO_DAY
  SEVEN_DAY
  FOURTEEN_DAY
  THIRTY_DAY
}

enum UserRole {
  OWNER
  USER
  ADMIN
}

// Better Auth Models
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified Boolean   @default(false)
  name          String?
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  sessions               Session[]
  accounts               Account[]
  videos                 Video[]
  snapshots              AnalyticsSnapshot[]
  dismissedNotifications DismissedNotification[]

  @@index([email])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  accountId         String
  providerId        String
  accessToken       String?  @db.Text
  refreshToken      String?  @db.Text
  idToken           String?  @db.Text
  expiresAt         DateTime?
  password          String?  @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  @@unique([identifier, value])
  @@index([identifier])
}

model Video {
  id                 String             @id @default(uuid())
  userId             String?
  title              String
  script             String             @db.Text
  description        String             @db.Text
  videoLengthSeconds Int
  postDate           DateTime?
  status             VideoStatus        @default(DRAFT)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  snapshots          AnalyticsSnapshot[]
  hashtags           VideoHashtag[]
  user               User?              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([createdAt])
  @@index([userId])
}

model AnalyticsSnapshot {
  id                   String       @id @default(uuid())
  videoId              String
  userId               String?
  recordedAt           DateTime     @default(now())
  snapshotType         SnapshotType
  views                Int?
  totalPlayTimeSeconds Int?
  avgWatchTimeSeconds  Decimal?     @db.Decimal(10, 2)
  completionRate       Decimal?     @db.Decimal(5, 4)
  newFollowers         Int?
  likes                Int?
  comments             Int?
  shares               Int?
  favorites            Int?
  profileViews         Int?
  reach                Int?
  video                Video        @relation(fields: [videoId], references: [id], onDelete: Cascade)
  user                 User?        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([videoId, snapshotType])
  @@index([videoId])
  @@index([recordedAt])
  @@index([userId])
}

model Hashtag {
  id        String         @id @default(uuid())
  tag       String         @unique
  createdAt DateTime       @default(now())
  videos    VideoHashtag[]

  @@index([tag])
}

model VideoHashtag {
  videoId   String
  hashtagId String
  position  Int
  video     Video   @relation(fields: [videoId], references: [id], onDelete: Cascade)
  hashtag   Hashtag @relation(fields: [hashtagId], references: [id], onDelete: Cascade)

  @@id([videoId, hashtagId])
  @@index([hashtagId])
}

model DismissedNotification {
  id             String   @id @default(uuid())
  userId         String?
  notificationId String   @unique
  dismissedAt    DateTime @default(now())
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([notificationId])
  @@index([userId])
}
